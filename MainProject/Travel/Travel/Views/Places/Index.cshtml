@model Travel.Models.PlaceViewModel
@{
    ViewData["Title"] = "Index";
}
<head>
    <link type="text/css" href="~/Styles/styleMain.css" rel="stylesheet"/>

</head>
<body>
    <section class="banner" id="top">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="banner-caption">
                        <div class="line-dec"></div>
                        <div class="row">
                            <div class="col">
                                <h2>Лучший маршрут для тебя!</h2>
                                <span>Выбирай интересные места в своем городе и отправляйся за приключениями</span>

                            </div>
                            <div class="col">

                            </div>
                            <div class="col">

                            </div>

                        </div>



                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="submit-form">
        <form asp-controller="Places" asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-4 first-item">
                    <fieldset>
                        <input type="text" name="SearchString" class="form-control" placeholder="Название..." />
                    </fieldset>
                </div>
                <div class="col-md-2 second-item">
                    <fieldset>
                        <select asp-for="PlaceCitys" asp-items="Model.Citys">

                            <option value="">Все города</option>
                        </select>


                    </fieldset>
                </div>
                <div class="col-md-2 third-item">
                    <fieldset>
                        <select asp-for="cStatus" asp-items="Model.RStatus">
                            <option value="">Все</option>
                        </select>
                    </fieldset>
                </div>
                <div class="col-md-2">
                    <fieldset>
                        <select asp-for="cType" asp-items="Model.RTyps">
                            <option value="">Все</option>
                        </select>
                    </fieldset>
                </div>
                <div class="col-md-2">
                    <fieldset>
                        <button type="submit" id="form-submit" class="btn">Найти</button>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>


    <p>
        <a asp-action="Create">Create New</a>
    </p>
    @{
        /*if (User.Identity.IsAuthenticated)//Отображать только, если пользователь "в сети"
        {
            <p>
                <a asp-action="AddRoute">Создать маршрут</a>
            </p>
        }*/
    }
    

    <section class="cards">
        @foreach (var item in Model.Places)
        {
            <article class="card card--1">
                <div class="card__info-hover">
                    <svg class="card__like" viewBox="0 0 24 24">
                        <path fill="#ffffff" d="M12.1,18.55L12,18.65L11.89,18.55C7.14,14.24 4,11.39 4,8.5C4,6.5 5.5,5 7.5,5C9.04,5 10.54,6 11.07,7.36H12.93C13.46,6 14.96,5 16.5,5C18.5,5 20,6.5 20,8.5C20,11.39 16.86,14.24 12.1,18.55M16.5,3C14.76,3 13.09,3.81 12,5.08C10.91,3.81 9.24,3 7.5,3C4.42,3 2,5.41 2,8.5C2,12.27 5.4,15.36 10.55,20.03L12,21.35L13.45,20.03C18.6,15.36 22,12.27 22,8.5C22,5.41 19.58,3 16.5,3Z" />
                    </svg>
                    <div class="card__clock-info">
                        <svg class="card__clock" viewBox="0 0 24 24">
                            <path d="M12,20A7,7 0 0,1 5,13A7,7 0 0,1 12,6A7,7 0 0,1 19,13A7,7 0 0,1 12,20M19.03,7.39L20.45,5.97C20,5.46 19.55,5 19.04,4.56L17.62,6C16.07,4.74 14.12,4 12,4A9,9 0 0,0 3,13A9,9 0 0,0 12,22C17,22 21,17.97 21,13C21,10.88 20.26,8.93 19.03,7.39M11,14H13V8H11M15,1H9V3H15V1Z" />
                        </svg><span class="card__time">@Html.DisplayFor(modelItem => item.Time)</span>
                    </div>

                </div>
                <div class="kartinka">
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="http://images.vfl.ru/ii/1610877485/32626723/32980151.jpg" width="300" height="255" alt=""></a> 
                </div>
                <div class="card__info">
                    <span class="card__category">@Html.DisplayFor(modelItem => item.Type)</span>
                    <h3 class="card__title">@Html.DisplayFor(modelItem => item.NamePlace)</h3>
                    <p class="card__author">@Html.DisplayFor(modelItem => item.City)</p>
                    <p class="card__by">
                        @Html.DisplayFor(modelItem => item.Address)
                    </p>
                    <p>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                        <a asp-action="AddPlace" asp-route-id="@item.Id">Добавить в маршрут</a>
                    </p>
                </div>

            </article>
        }
    </section>

</body>

