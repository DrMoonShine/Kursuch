 }
    <form asp-controller="Places" asp-action="Index" method="get">
        <p>
            Поиск по названию: <input type="text" name="SearchString" />
            <select asp-for="PlaceCitys" asp-items="Model.Citys">
                s
                <option value="">All</option>
            </select>
            <select asp-for="cStatus" asp-items="Model.RStatus">
                <option value="">All</option>
            </select>
            <select asp-for="cType" asp-items="Model.RTyps">
                <option value="">All</option>
            </select>

            <input type="submit" value="Принять" />
        </p>
    </form>

    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Places[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places[0].Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places[0].Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places[0].Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places[0].Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places[0].ReviewPlace)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places[0].NamePlace)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Places)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewPlace)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NamePlace)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
