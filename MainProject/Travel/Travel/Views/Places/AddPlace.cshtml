                <label asp-for="UserRouteID" class="control-label">Введите номер маршрута</label>
                <input asp-for="UserRouteID" class="form-control" />
                <span asp-validation-for="UserRouteID" class="text-danger"></span>
            </div>
            


                <div class="form-group">
                    <input type="hidden" asp-for="PlaceID" class="form-control" />
